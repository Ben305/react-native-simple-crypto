{
    "compilerOptions": {
      "target": "es2015",
      "jsx": "react-native",
      "noEmit": true,
      "moduleResolution": "node",
      "allowJs": true,
      "importHelpers": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": "./",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "lib": ["es2015", "es2016", "es2017"],
      "sourceMap": true
    },
    "exclude": [
      "node_modules",
      "android",
      "ios",
      "coverage"
    ],
    "include": [
      "**/*",
      "typings/**/*"
    ]
  }
  